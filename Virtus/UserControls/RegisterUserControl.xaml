<UserControl x:Class="Virtus.RegisterUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Virtus"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1280">

    <UserControl.DataContext>
        <local:RegisterClientsViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        
        <StackPanel Orientation="Horizontal" Background="{StaticResource DarkBlueBrush}">
            <Button Content="Clientes" Style="{StaticResource MenuButton}" Command="{Binding MenuButton}" CommandParameter="Clientes"/>
            <Button Content="Fornecedores" Style="{StaticResource MenuButton}" Command="{Binding MenuButton}" CommandParameter="Fornecedores" />
            <Button Content="Funcionários" Style="{StaticResource MenuButton}" Command="{Binding MenuButton}" CommandParameter="Funcionarios"/>
            <Button Content="Transportadoras" Style="{StaticResource MenuButton}" Command="{Binding MenuButton}" CommandParameter="Transportadoras"/>
        </StackPanel>
        
        <!-- Register client-->

        <!--#region Content-->
        <ContentControl Grid.Row="1" 
                        Grid.Column="1" 
                        Margin="15,15,0,0"
                        Content="{Binding RegisterContent, Converter={local:RegisterPageValueConverter}}" />
        <!--#endregion-->
       
    </Grid>
</UserControl>
